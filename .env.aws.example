# =============================================================================
# VARIÁVEIS DE AMBIENTE - DEPLOY AWS
# =============================================================================
# Copie este arquivo para .env quando for fazer deploy na AWS
# Comando: cp .env.aws.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# SPRING BOOT
# -----------------------------------------------------------------------------
SPRING_PROFILES_ACTIVE=aws

# -----------------------------------------------------------------------------
# AWS CONFIGURATION
# -----------------------------------------------------------------------------
AWS_REGION=sa-east-1
AWS_ACCOUNT_ID=123456789012

# ECR Repository
ECR_REPOSITORY=ppghub

# -----------------------------------------------------------------------------
# DATABASE - Amazon RDS PostgreSQL
# -----------------------------------------------------------------------------
AWS_RDS_ENDPOINT=ppghub-db.xxxxxxxxxxxxx.sa-east-1.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_DATABASE=ppg_hub
AWS_RDS_USERNAME=ppghub
AWS_RDS_PASSWORD=ALTERE_SENHA_RDS_FORTE_123!@#

# -----------------------------------------------------------------------------
# CACHE - Amazon ElastiCache Redis
# -----------------------------------------------------------------------------
AWS_ELASTICACHE_ENDPOINT=ppghub-cache.xxxxx.cache.amazonaws.com
AWS_ELASTICACHE_PORT=6379
AWS_ELASTICACHE_AUTH_TOKEN=ALTERE_SENHA_REDIS_FORTE_456!@#

# -----------------------------------------------------------------------------
# OPENALEX API
# -----------------------------------------------------------------------------
OPENALEX_EMAIL=seu-email@instituicao.edu.br

# -----------------------------------------------------------------------------
# S3 BUCKETS (opcional)
# -----------------------------------------------------------------------------
AWS_S3_BUCKET=ppghub-prod
AWS_S3_BACKUP_BUCKET=ppghub-backups

# -----------------------------------------------------------------------------
# ECS/FARGATE (se usar)
# -----------------------------------------------------------------------------
ECS_CLUSTER=ppghub-cluster
ECS_SERVICE=ppghub-service
ECS_TASK_DEFINITION=ppghub-task

# -----------------------------------------------------------------------------
# ELASTIC BEANSTALK (alternativa)
# -----------------------------------------------------------------------------
# EB_APPLICATION=ppghub
# EB_ENVIRONMENT=ppghub-prod

# -----------------------------------------------------------------------------
# DOMÍNIO
# -----------------------------------------------------------------------------
APP_DOMAIN=ppghub.com.br

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
SERVER_PORT=8080

# -----------------------------------------------------------------------------
# CLOUDWATCH (opcional)
# -----------------------------------------------------------------------------
# AWS_CLOUDWATCH_NAMESPACE=PPGHub
